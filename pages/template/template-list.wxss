/* pages/template/template-list.wxss */
.tmpContainer{
  display: flex;
  flex-direction: column;
  padding-top: 10rpx;
  padding-bottom: 10rpx;
  border-bottom: 1rpx solid #eee;
  border-top: 1rpx solid #eee;
}
.avatar_date{
  font-size: 32rpx;
  padding: 10rpx;
}
.avatar_date image{
  width: 60rpx;
  height: 60rpx;
  vertical-align: middle;
}
.company{
  font-size: 36rpx;
  font-weight: bold;
  margin-left: 10rpx;
  padding: 10rpx;
}
.contentImg{
  width: 100%;
  height: 460rpx;
}
.content{
  text-indent: 32rpx;
  font-size: 32rpx;
}
.comment image{
  width: 36rpx;
  height: 36rpx;
  margin-right: 10rpx;
}
.comment text{
  font-size: 32rpx;
  margin-right: 28rpx;
}