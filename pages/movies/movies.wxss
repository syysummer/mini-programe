/* pages/movies/movies.wxss */
.movieContainer{
  display: flex;
  padding: 20rpx;
}
.movieImg{
height: 150rpx;
width: 150rpx;
vertical-align: middle;
}
.movie_detail{
  display: flex;
  flex-direction: column;
  width: 65%;
  margin-left: 20rpx;
}
.movie_name{
  font-size: 32rpx;
  font-weight: bold;
  color: #000;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
  width: 80%;
}
.movie_year{
  font-size: 28rpx;
  color: #666;
  margin: 20rpx 0;
}
.movie_director{
  font-size: 30rpx;
  color: #333;
}
.movie_rating{
  font-size: 36rpx;
  font-weight: bold;
  color: red;
}